{
  "manifest_version": 3,
  "name": "Readability Text Extractor",
  "version": "1.0",
  "description": "Extracts article text using Mozilla Readability.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Extract Article Text"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["readability.min.js", "inject.js"]
    }
  ]
}
